<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sumugu.liubo.lc.ItemDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/text_item_content_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_item_created_at_detail"
        android:layout_below="@+id/text_item_content_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_item_alarmclock_detail"
        android:layout_below="@+id/text_item_content_detail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1分钟后"
        android:id="@+id/btn_1minute_detail"
        android:layout_below="@+id/text_item_created_at_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5分钟后"
        android:id="@+id/btn_5minutes_detail"
        android:layout_alignTop="@+id/btn_15minutes_detail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15分钟后"
        android:id="@+id/btn_15minutes_detail"
        android:layout_below="@+id/text_item_alarmclock_detail"
        android:layout_alignRight="@+id/text_item_alarmclock_detail"
        android:layout_alignEnd="@+id/text_item_alarmclock_detail" />

    <Button
        android:id="@+id/btn_item_delete_detail"
        android:text="删除"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宣布完成"
        android:id="@+id/btn_item_finish_detail"
        android:layout_below="@+id/btn_1minute_detail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/btn_15minutes_detail"
        android:layout_alignEnd="@+id/btn_15minutes_detail" />

</RelativeLayout>
