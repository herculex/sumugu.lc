<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemline_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:id="@+id/layer_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is layer 3,for setting or about."
            android:textColor="#fff"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/container_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="write down here."
            android:inputType="text"
            android:padding="10dp"
            android:textSize="20sp">
        </EditText>
        <TextView
            android:id="@+id/text_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:hint="Add Remind"
            />
    </LinearLayout>
    <com.sumugu.liubo.lc.ui.MyListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
    </com.sumugu.liubo.lc.ui.MyListView>
    <RelativeLayout
        android:id="@+id/layer_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0000000"
        android:visibility="gone">
    </RelativeLayout>
</FrameLayout>
