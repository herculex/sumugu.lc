<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/itemline_container">
    <RelativeLayout
        android:id="@+id/layer_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is layer 3,for setting or about."/>
    </RelativeLayout>
    <EditText
        android:id="@+id/edit_new"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:hint="write down here.">
    </EditText>
    <com.sumugu.liubo.lc.ui.MyListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"></com.sumugu.liubo.lc.ui.MyListView>
    <RelativeLayout
        android:id="@+id/layer_cover"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="showoff">
    </RelativeLayout>
</FrameLayout>
