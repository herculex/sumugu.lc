<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp">

    <TextView
        android:id="@+id/text_created_at_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="6dp"
        android:paddingRight="8dp"
        android:text="my created at day.."
        android:textSize="@dimen/abc_text_size_title_material" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_top_round_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/text_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="A flag" />

        <TextView
            android:id="@+id/text_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="my alarm.." />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_bottom_round_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="my content.."
            android:textSize="@dimen/abc_text_size_headline_material" />

        <TextView
            android:id="@+id/text_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my created at.." />
    </LinearLayout>
</LinearLayout>

