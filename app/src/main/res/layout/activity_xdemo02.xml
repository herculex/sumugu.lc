<?xml version="1.0" encoding="utf-8"?>


<com.sumugu.liubo.lc.xdemo.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customScroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:orientation="vertical">

            <com.sumugu.liubo.lc.xdemo.MyCustomItem
                android:id="@+id/customItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"></com.sumugu.liubo.lc.xdemo.MyCustomItem>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Page01" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layer_cover"
            android:background="#b0000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Page02" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Page03" />
    </LinearLayout>
</com.sumugu.liubo.lc.xdemo.MyScrollView>
