<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:clickToClose="true"
        android:id="@+id/swipe_sample1">

        <LinearLayout
            android:tag="Bottom1"
            android:background="#66ddff00"
            android:id="@+id/bottom_wrapper"
            android:layout_width="160dp"
            android:weightSum="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/archive"
                android:textColor="#fff"
                android:text="搞定了"
                android:layout_weight="0.5"
                android:gravity="center"
                android:background="@drawable/red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/delete"
                android:text="删除？"
                android:background="@drawable/dark_gray"
                android:gravity="center"
                android:clickable="true"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:tag="Bottom4"
            android:id="@+id/bottom_wrapper_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@id/panel_setting_ctl_timer3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#f7e79c"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center"
                android:text="后天"/>
            <TextView
                android:id="@id/panel_setting_ctl_timer2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#4cd964"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center"
                android:text="明天"/>
            <TextView
                android:id="@id/panel_setting_ctl_timer1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center"
                android:text="今天"/>
            <TextView
                android:id="@id/panel_setting_ctl_timercancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:gravity="center"
                android:text="取消"/>

        </LinearLayout>

        <LinearLayout
            android:tag="Bottom3"
            android:id="@+id/starbott"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/bottom_wrapper_child1"
                android:background="@drawable/dark_gray"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/star"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/displayText"
                android:padding="10dp"
                android:background="@drawable/white"
                android:tag="Hover"
                android:text="别玩梦想，死的很惨的。－2015.10.19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/displayItemId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="UUID_itemId_value"
                />
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>
