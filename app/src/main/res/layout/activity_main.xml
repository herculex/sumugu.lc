<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layer_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/layer_unlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp">

        <LinearLayout
            android:id="@+id/layer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_xdemo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Xdemo"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_unlock_screen"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="unlock"
                android:visibility="gone" />

            <DigitalClock
                android:id="@+id/dc_clock"
                style="@style/Base.TextAppearance.AppCompat.Display3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/tv_count_hint"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#E3F2FD"
                android:gravity="center_vertical|center"
                android:hint="今日无事可干？" />

            <ListView
                android:id="@+id/lv_lite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
