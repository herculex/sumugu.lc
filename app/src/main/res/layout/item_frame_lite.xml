<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Base.TextAppearance.AppCompat.Body1" android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:id="@+id/container_del_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_delete_hint"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#F44336"
            android:gravity="center_vertical|center"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/tv_done"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#4CAF50"
            android:gravity="center_vertical|center"
            android:padding="10dp"
            android:text="完成"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/tv_delete_hint" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/container_item"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="我在尝试一些新的东西"
            android:typeface="monospace"/>
    </LinearLayout>

</FrameLayout>